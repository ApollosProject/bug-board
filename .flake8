[flake8]
# Exclude directories
exclude = 
    venv,
    .venv,
    env,
    .env,
    __pycache__,
    .git,
    static,
    templates,
    .tox,
    build,
    dist,
    *.egg-info

# Set maximum line length to 88 (black default) instead of 79
max-line-length = 88

# Set maximum complexity
max-complexity = 10

# Select specific error codes to check
select = E,W,F

# Ignore specific errors if needed (currently none)
ignore = 

# Show source code for each error
show-source = True

# Count errors and warnings
count = True

# Display statistics
statistics = True